{
    "_": " vim: set expandtab shiftwidth=4 softtabstop=4: ",

    "id": "emgmt_qemu",
    "default_domain": "hcphacking.xyz",

    "services": [
        "fqdn_updater",
        "runner"
    ],
    "default_targets": [
        "start-fqdn",
        "start-services"
    ],
    "args_for": "runner",

    "fqdn_updater": {
        "exec": "/hcp/common/fqdn_updater.py",
        "until": "/etc/hcp/emgmt_qemu/touch-fqdn-alive",
        "nowait": 1,
        "tag": "fqdn",
        "env": {
            "unset": { "HCP_NOTRACEFILE": null }
        },
        "path": "/fqdn-bus",
        "refresh": 60,
        "expiry": 300,
        "no_publish": true,
        "no_recolt": true,
        "pass_networks": true
    },

    "runner": {
        "exec": "/hcp/qemu/runner.py",
        "tag": "services",
        "state": "/qemu_state",
        "init_env": {
            "pathadd": {
                "PATH": "/bin:/sbin:/usr/bin:/usr/sbin"
            },
            "set": {
                "VERBOSE": "2",
                "HCP_CONFIG_FILE": "/usecase/emgmt.json",
                "HOME": "/root",
                "HCP_NOTRACEFILE": "1"
            }
        },
        "mounts": {
            "fqdn-bus": "/fqdn-bus",
            "usecase": {
               "path": "/usecase",
               "host_options": "readonly=on"
            },
            "hcp": {
               "path": "/hcp",
               "host_options": "readonly=on"
            },
            "upstream.networks": {
               "path": "/upstream.networks",
               "host_options": "readonly=on"
            },
            "enrolldb": "/enrolldb",
            "enrollsigner": {
               "path": "/enrollsigner",
               "host_options": "readonly"
            },
            "enrollcertissuer": {
               "path": "/enrollcertissuer",
               "host_options": "readonly"
            },
            "enrollcertchecker": {
               "path": "/enrollcertchecker",
               "host_options": "readonly"
            },
            "enrollclient": {
               "path": "/enrollclient",
               "host_options": "readonly"
            },
            "enrollserver": {
               "path": "/enrollserver",
               "host_options": "readonly"
            },
            "vendors": {
                "path": "/vendors",
                "host_options": "readonly"
            }
        },
        "ports": [ 8443 ]
    }
}
