{
    "_": " vim: set expandtab shiftwidth=4 softtabstop=4: ",

    "id": "workstation1",

    "services": [
        "fqdn_updater",
        "attester",
        "webtop"
    ],
    "default_targets": [
        "start-fqdn",
        "start-attester",
        "setup-local",
        "exec-webtop"
    ],

    "fqdn_updater": {
        "exec": "/hcp/common/fqdn_updater.py",
        "until": "/etc/hcp/workstation1/touch-fqdn-alive",
        "nowait": 1,
        "tag": "fqdn",
        "env": {
            "unset": { "HCP_NOTRACEFILE": null }
        },
        "path": "/fqdn-bus",
        "refresh": 5,
        "expiry": 20,
        "hostnames": [ "workstation1" ],
        "default_domain": "hcphacking.xyz",
        "bad_address": "100.100.100.100"
    },

    "attester": {
        "exec": "/hcp/common/attester.py",
        "until": "/etc/hcp/workstation1/touch-attested",
        "nowait": 1,
        "tag": "attester",
        "period": 120,
        "env": {
            "set": {
                "HCP_ATTESTCLIENT_HOOK_KRB5KEY": "/hcp/sshsvc/hup_sshd.sh"
            },
            "unset": {
                "HCP_NOTRACEFILE": null
            }
        }
    },
    "client": {
        "exec": "/hcp/tools/run_client.sh",
        "touchfile": "/etc/hcp/workstation1/touch-attested",
        "env": {
            "unset": { "HCP_NOTRACEFILE": null }
        },
        "attest_url": "http://ahcp.hcphacking.xyz:8080",
        "tcti": "swtpm:path=/tpm_socket_workstation1/tpm",
        "callbacks": [ "/hcp/tools/attest_callback_common.py" ]
    },

    "webtop": {
        "_": [
            "This service gets invoked by 'exec' rather than 'start', which",
            "is why there's no 'tag' attribute. Unfortunately the s6-overlay",
            "thing expects to be pid 1, so we lose launcher's process-control,",
            "and we can't use another 'init' to handle signals properly either."
        ],
        "setup": [ {
            "tag": "local",
            "exec": "/hcp/caboodle/set-abc-env-file.sh",
            "touchfile": "/config/hcp.env"
        } ],
        "exec": "/init",
        "env": {
            "set": { "KRB5_CONFIG": "/etc/hcp/workstation1/krb5.conf" }
        }
    }
}
