{
    "_": " vim: set expandtab shiftwidth=4 softtabstop=4: ",

    "id": "emgmt_pol_qemu",
    "hostnames": [ "do-not-contact-me-emgmt_pol_qemu" ],
    "default_domain": "hcphacking.xyz",

    "services": [
        "fqdn_updater",
        "runner"
    ],
    "default_targets": [
        "start-fqdn",
        "start-services"
    ],
    "args_for": "runner",

    "fqdn_updater": {
        "exec": "/hcp/common/fqdn_updater.py",
        "until": "/etc/hcp/emgmt_pol_qemu/touch-fqdn-alive",
        "nowait": 1,
        "tag": "fqdn",
        "env": {
            "unset": { "HCP_NOTRACEFILE": null }
        },
        "path": "/fqdn-bus",
        "refresh": 60,
        "expiry": 300,
        "bad_address": "100.100.100.100",
        "no_publish": true,
        "no_recolt": true,
        "pass_networks": true
    },

    "runner": {
        "exec": "/hcp/qemu/runner.py",
        "tag": "services",
        "init_env": {
            "pathadd": {
                "PATH": "/bin:/sbin:/usr/bin:/usr/sbin"
            },
            "set": {
                "__uncomment_VERBOSE": "2",
                "HCP_CONFIG_FILE": "/usecase/emgmt_pol.json",
                "HOME": "/root",
                "HCP_NOTRACEFILE": "1"
            }
        },
        "mounts": {
            "fqdn-bus": "/fqdn-bus",
            "usecase": {
               "path": "/usecase",
               "host_options": "readonly=on"
            },
            "hcp": {
               "path": "/hcp",
               "host_options": "readonly=on"
            },
            "upstream.networks": {
               "path": "/upstream.networks",
               "host_options": "readonly=on"
            }
        },
        "ports": [ 9080 ]
    }
}

