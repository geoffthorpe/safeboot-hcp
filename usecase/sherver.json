{
    "_": " vim: set expandtab shiftwidth=4 softtabstop=4: ",

    "id": "sherver",
    "hostnames": [ "sherver" ],
    "default_domain": "hcphacking.xyz",

    "env": {
        "set": {
            "KRB5_KTNAME": "/etc/hcp/sherver/krb5.keytab",
            "KRB5_CONFIG": "/etc/hcp/sherver/krb5.conf"
        }
    },

    "services": [
        "fqdn_updater",
        "attester",
        "sshsvc",
        "sshd"
    ],
    "default_targets": [
        "start-fqdn",
        "start-attester",
        "setup-global",
        "setup-local",
        "start-services"
    ],
    "args_for": "sshd",

    "fqdn_updater": {
        "exec": "/hcp/common/fqdn_updater.py",
        "until": "/etc/hcp/sherver/touch-fqdn-alive",
        "nowait": 1,
        "tag": "fqdn",
        "env": {
            "unset": { "HCP_NOTRACEFILE": null }
        },
        "path": "/fqdn-bus",
        "refresh": 5,
        "expiry": 20,
        "bad_address": "100.100.100.100"
    },

    "attester": {
        "exec": "/hcp/common/attester.py",
        "until": "/etc/hcp/sherver/touch-attested",
        "nowait": 1,
        "tag": "attester",
        "env": {
            "unset": {
                "HCP_NOTRACEFILE": null
            },
            "set": {
                "HCP_ATTESTCLIENT_HOOK_KRB5KEY": "/hcp/sshsvc/hup_sshd.sh"
            }
        },
        "period": 120,
        "retry": 5
    },
    "client": {
        "exec": "/hcp/tools/run_client.sh",
        "touchfile": "/etc/hcp/sherver/touch-attested",
        "env": {
            "unset": { "HCP_NOTRACEFILE": null }
        },
        "attest_url": "http://ahcp.hcphacking.xyz:8080",
        "tcti": "swtpm:path=/tpm_socket_sherver/tpm",
        "callbacks": [ "/hcp/tools/attest_callback_common.py" ]
    },

    "sshsvc": {
        "setup": [ {
                "tag": "global",
                "exec": "/hcp/sshsvc/setup_global.sh",
                "touchfile": "/sherver/initialized"
            }, {
                "tag": "local",
                "exec": "/hcp/sshsvc/setup_local.sh",
                "touchfile": "/etc/hcp/sherver/touch-sshsvc-local-setup"
            } ],
        "state": "/sherver"
    },

    "sshd": {
        "setup": { "touchfile": "/etc/hcp/sherver/touch-sshsvc-local-setup" },
        "exec": [ "/hcp/sshsvc/run_sshd.py", "/usr/sbin/sshd" ],
        "args": [ "-e", "-D", "-f", "/sherver/etc/config", "-p", "2222" ],
        "tag": "services",
        "env": { "set": { "HCP_NOTRACEFILE": "1" } }
    }
}
