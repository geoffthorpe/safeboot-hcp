{
    "_": " vim: set expandtab shiftwidth=4 softtabstop=4: ",

    "services": [
        "fqdn_updater",
        "swtpmsvc"
    ],
    "default_targets": [
        "start-presetup",
        "start-postsetup"
    ],

    "fqdn_updater": {
        "exec": "/hcp/common/fqdn_updater.py",
        "until": "/etc/hcp-fqdn-alive",
        "nowait": 1,
        "tag": "presetup",
        "env": {
            "unset": { "HCP_NOTRACEFILE": null }
        },
        "path": "/fqdn-bus",
        "refresh": 5,
        "expiry": 20,
        "hostnames": [ "do-not-contact-me-kdcprimarytpm" ],
        "default_domain": "hcphacking.xyz"
    },

    "swtpmsvc": {
        "setup": { "touchfile": "/tpm_kdc_primary/tpm/ek.pub" },
        "exec": "/hcp/swtpmsvc/run_swtpm.sh",
        "state": "/tpm_kdc_primary",
        "sockdir": "/tpm_socket_kdc_primary",
        "tag": "postsetup"
    }
}
