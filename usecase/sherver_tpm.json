{
    "_": " vim: set expandtab shiftwidth=4 softtabstop=4: ",

    "id": "tpm.sherver",
    "default_domain": "hcphacking.xyz",

    "services": [
        "fqdn_updater",
        "swtpmsvc"
    ],
    "default_targets": [
        "start-fqdn",
        "setup-global",
        "start-services"
    ],

    "fqdn_updater": {
        "exec": "/hcp/common/fqdn_updater.py",
        "until": "/etc/hcp/tpm.sherver/touch-fqdn-alive",
        "nowait": 1,
        "tag": "fqdn",
        "env": {
            "unset": { "HCP_NOTRACEFILE": null }
        },
        "path": "/fqdn-bus",
        "refresh": 60,
        "expiry": 300
    },

    "swtpmsvc": {
        "setup": {
            "tag": "global",
            "exec": [
                "/hcp/common/wait_touchfile.py",
                "/tpm_sherver/tpm/ek.pub"
            ],
            "touchfile": "/tpm_sherver/tpm/ek.pub"
        },
        "exec": "/hcp/swtpmsvc/run_swtpm.sh",
        "state": "/tpm_sherver",
        "sockdir": "/tpm_socket_sherver",
        "tag": "services"
    }
}
